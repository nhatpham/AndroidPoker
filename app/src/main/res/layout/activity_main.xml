<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.phamily.poker.MainActivity"
    tools:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/iv2"
        android:layout_toEndOf="@+id/iv2" />


    <ImageView
        android:id="@+id/iv2"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/iv1"
        android:layout_toEndOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/pokerHand"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/iv3"
        android:layout_toEndOf="@+id/iv3" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/iv3"
        android:layout_toEndOf="@+id/iv4" />

    <Button
        android:id="@+id/shuffleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        android:text="Shuffle"
        tools:text="Shuffle"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv1"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/pokerHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/drawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shuffleButton"
        android:layout_toEndOf="@+id/shuffleButton"
        android:text="Deal" />


</RelativeLayout>
