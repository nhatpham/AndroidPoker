<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.phamily.poker.MainActivity"
    tools:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv3" />


    <ImageView
        android:id="@+id/iv2"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv2" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv4" />

    <Button
        android:id="@+id/shuffleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        android:text="ShuffleButton"
        tools:text="Shuffle" />

    <TextView
        android:id="@+id/pokerHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv5"
        android:layout_alignStart="@+id/iv3"
        android:layout_below="@+id/iv3"
        android:layout_marginTop="22dp"
        android:text="TextView" />


</RelativeLayout>
